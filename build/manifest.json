{
  "name": "Add to Picplum",
  "version": "1.0",
  "background": 
    { 
      "scripts": [ 
        "jquery-1.7.2.min.js",
        "background.js"
      ] 
    },
  "permissions": [ 
      "https://www.picplum.com/",
      "http://dodeja.mine.nu:3000/",
      "tabs",
      "contextMenus",
      "notifications"
    ],
     "content_scripts" : [
       {
         "matches" : [
           "*://*.facebook.com/photo.php*"
         ],
         "js" : [
           "zepto.min.js",
           "contentscript.js"
          ],
         "run_at" : "document_end",
         "all_frames" : false
       }
    ],
  "manifest_version": 2,
  "page_action": {
      "default_icon": "icon2.png", 
      "default_title": "Send this photo to Picplum"
    }
}
